{{ ansible_managed | comment(decoration=';') }}
; NSD data file for {{ nsd_reverse_zone_name_v4 }}

$ORIGIN {{ nsd_reverse_zone_name_v4 }}.; 'default' record as FQDN for this zone
$TTL {{ nsd_ttl }}; default time-to-live for this zone

{{ nsd_reverse_zone_name_v4 }}.   in  SOA  ns1.{{ nsd_zone_name }}. hostmaster.{{ nsd_zone_name }}. (
        {{ _dns_serial }}  ; Serial
        {{ nsd_dns_refresh }} ; Refresh
        {{ nsd_dns_retry }} ; Retry
        {{ nsd_dns_expire }} ; Expire
        {{ nsd_dns_negative_response_cache }}; Negative response caching ttl
)

; name servers
        IN      NS      ns1.{{ nsd_zone_name }}.

; PTR records
{% for record in nsd_records | selectattr("type", "equalto", "A") %}
{% if not (record.id == '@' and record.record is defined) and not record.no_ptr is defined %}
{{"%s\tPTR\t%s.%s." % (record.record | ansible.utils.ipaddr('revdns') | replace('.' + nsd_reverse_zone_name_v4 + '.', ''), record.id, nsd_zone_name )}}
{% endif %}
{% endfor %}
